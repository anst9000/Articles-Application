extends layout

block content
  div.card
    div.card-body
      h1.card-title= article.title
      h5.card-subtitle.mb-2.text-muted Written by #{author}
      div.card-text= article.body
      hr
      a.btn.btn-dark(href='/') Go Back
      if user
        if user.id == article.author
          a.btn.btn-secondary(href='/articles/edit/' + article._id) Edit
          a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete